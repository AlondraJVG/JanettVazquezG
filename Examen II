def pedir_tamanio_matriz():
    while True:
        try:
            n = int(input("Ingrese un número para determinar el tamaño de la matriz: "))
            if n > 0:
                return n
            else:
                print("Por favor, ingrese un número entero positivo.")
        except ValueError:
            print("Por favor, ingrese un número entero válido.")

def crear_matriz(n):
    matriz = [[0] * n for _ in range(n)]
    contador = 1

    for i in range(n):
        for j in range(n):
            matriz[i][j] = contador
            contador += 1

    return matriz

def imprimir_matriz(matriz):
    for fila in matriz:
        print(" ".join(map(str, fila)))

tamanio = pedir_tamanio_matriz()
matriz = crear_matriz(tamanio)
imprimir_matriz(matriz)

